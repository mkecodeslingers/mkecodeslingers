<div>
  <div class="jumbotron intro resources">
    <h1>Welcome to our <br> temple of knowledge!</h1>
    <h3>This is where we share all of our favorite tutorials, guides, and resources.</h3>
  </div>

  <div class="search-sort container-row row">
    <div class="add-new-item">
      <%= link_to 'Add a new resource!', new_resource_path, class: 'btn btn-info add-new' %>
    </div>
    <div class="form-group search-item">
      <input type="text" class="form-control" placeholder="Search resources">
    </div>
  </div>

  <div class="resource-container">
    <% @resources.each do |resource| %>
        <div class="booyah-box">
          <div class="resource-card">
            <h4><%= resource.category%></h4>
            <div class="resource-card-title">
              <a href="<%= resource_path(resource) %>"><h3><%= resource.name %></h3></a>
              <p><%= resource.description %></p>
            </div>
            <div class="resource-footer">
              <a href="<%= resource.external_link %>>"><%= resource.external_link %></a>
              <%= resource.resource_type %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

